{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": ".",
      "allowJs": true,
      "outDir": "build",
      "sourceMap": true,
      "strict" : true,
      "typeRoots": [
        "./@types",
        "./node_modules/@types"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "test"
    ]
}